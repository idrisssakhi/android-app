<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.said.villefuteeips2017.AddItemFragment">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:background="#AAA" android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/avatar"
        android:layout_alignTop="@+id/avatar"
        android:textStyle="bold"
        tools:text="Item Name"
        android:layout_marginStart="10dp" android:layout_toEndOf="@+id/avatar" />


    <TextView
        android:id="@+id/item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/item_name"
        android:layout_below="@+id/item_name"
        tools:text="category "
        android:layout_alignStart="@+id/item_name" />
    <TextView
        android:id="@+id/item_locality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/item_category"
        android:layout_below="@+id/item_category"
        tools:text="ville "
        android:layout_alignStart="@+id/item_category" />


    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/item_locality"
        android:layout_below="@+id/item_locality"
        tools:text="price "
        android:layout_alignStart="@+id/item_locality" />

</RelativeLayout>